{
  "name": "pug/yii2",
  "description": "Yii2 Pug (ex Jade) extension",
  "keywords": [
    "yii",
    "pug",
    "jade",
    "view",
    "renderer"
  ],
  "type": "yii2-extension",
  "license": "MIT",
  "minimum-stability": "stable",
  "support": {
    "issues": "https://github.com/pug-php/pug-yii2/issues",
    "source": "https://github.com/pug-php/pug-yii2"
  },
  "authors": [
    {
      "name": "Revin Roman",
      "email": "roman@rmrevin.com",
      "homepage": "https://rmrevin.com/"
    },
    {
      "name": "kylekatarnls",
      "email": "pug@selfbuild.fr",
      "homepage": "https://www.phug-lang.com/"
    }
  ],
  "require": {
    "php": ">=5.4.0",
    "yiisoft/yii2": "^2.0",
    "pug-php/pug": "^2.5 || ^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": ">=4.8.35 <6.0",
    "codeclimate/php-test-reporter": ">=0.3"
  },
  "autoload": {
    "psr-4": {
      "Pug\\Yii\\": ""
    }
  }
}
